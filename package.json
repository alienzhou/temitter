{
  "name": "temitter",
  "version": "1.0.0",
  "description": "a type-safe & tiny event emitter",
  "types": "lib/index.d.ts",
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "exports": {
    ".": {
      "default": "./index.js"
    }
  },
  "scripts": {
    "build": "run-s build:clean build:compile build:size",
    "build:clean": "rm -rf lib && rm -f tsconfig.tsbuildinfo",
    "build:compile": "tsc --build tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./lib",
    "build:size": "uglifyjs lib/index.js --compress --mangle --toplevel | gzip-size",
    "watch": "tsc --build -w tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./lib",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "dev": "jest --watchAll",
    "test": "jest",
    "coverage": "nyc -r lcov -e .ts -x \"test/**/*.spec.ts\" npm run test",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alienzhou/temitter"
  },
  "keywords": [
    "event",
    "event-emitter",
    "type-safe"
  ],
  "author": "alienzhou",
  "license": "MIT",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.2",
    "@types/uglify-js": "^3.13.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "coveralls": "^3.1.1",
    "debug": "^4.3.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "gzip-size-cli": "^5.1.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.1.0",
    "tscpaths": "0.0.9",
    "typescript": "^4.3.2",
    "uglify-js": "^3.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
